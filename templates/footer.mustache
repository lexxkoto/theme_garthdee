<footer id="page-footer">
    <ul class="footer-links">
        <li><a href="https://www.rgu.ac.uk">Robert Gordon University</a></li>
        <li><a href="https://campusmoodle.rgu.ac.uk/public/policy/policy.html">User Policy</a></li>
        <li><a href="https://campusmoodle.rgu.ac.uk/public/policy/policy.html">Data Protection</a></li>
        <li><a href="https://campusmoodle.rgu.ac.uk/public/policy/accessibility.html">Accessibility</a></li>
    </ul>
    <p>Robert Gordon University is a registered Scottish charity, Registration Number SC013781</p>
    <div data-region="footer-container-popover">
        <button class="btn btn-icon bg-secondary icon-no-margin btn-footer-popover" data-action="footer-popover" aria-label="{{#str}}showfooter, theme_boost{{/str}}">
            {{#pix}}e/question, core{{/pix}}
        </button>
    </div>
    <div class="footer-content-popover container" data-region="footer-content-popover">
        {{# output.has_popover_links }}
            <div class="footer-section p-3 border-bottom">
                <p class="m-0 mb-2"><strong>Need help or support?</strong> Check out the 'Support' tab at the top of this page.</p>
                <p class="m-0"><a href="/course/view.php?id=74257"><i class="icon fa fa-question-circle"></i>Student Guides for Moodle</p>
                <p class="m-0"><a href="/course/view.php?id=74256"><i class="icon fa fa-question-circle"></i>Staff Guides for Moodle</p>
                <p class="m-0">{{{ output.supportemail }}}</p>
            </div>
        {{/ output.has_popover_links }}
        <div class="footer-section p-3 border-bottom">
            <div class="logininfo">
                {{{ output.login_info }}}
            </div>
            <div class="tool_usertours-resettourcontainer">
            </div>

            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
        <div class="footer-section p-3">
            <div>{{#str}}poweredbymoodle, core{{/str}}</div>
            {{#output.moodle_release}}
                <div>
                    {{#str}}version, core{{/str}} {{{ output.moodle_release }}}
                </div>
            {{/output.moodle_release}}
        </div>
    </div>
    
</footer>
{{#js}}
require(['theme_boost/footer-popover'], function(FooterPopover) {
    FooterPopover.init();
});
{{/js}}
